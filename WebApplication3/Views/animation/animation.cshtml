
@{
    ViewBag.Title = "animation";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>

                /*div {
          color:blue;

          position: absolute;
          animation-name: example;
          animation-duration: 3s;
          animation-fill-mode: backwards;
        }*/

                div span {
                    position: relative;
                    text-align: center;
                    font-size: 100px;
                    top: 100px;
                    left: 25%;
                    animation: bounce ease infinite alternate;
                    animation-duration: 3s;
                    animation-iteration-count: infinite;
                    animation-direction: alternate;
                }



                    div span:nth-child(2) {
                        animation-delay: .1s;
                    }

                    div span:nth-child(3) {
                        animation-delay: .2s;
                    }

                    div span:nth-child(4) {
                        animation-delay: .3s;
                    }

                    div span:nth-child(5) {
                        animation-delay: .4s;
                    }


                    div span:nth-child(6) {
                        animation-delay: .5s;
                    }

                    div span:nth-child(7) {
                        animation-delay: .6s;
                    }

                @@keyframes bounce {
                    25% {
                        top: 300px;
                        color: darkslateblue;
                    }

                    50% {
                        top: 300px;
                        color: forestgreen;
                    }

                    75% {
                        top: 300px;
                        color: mediumvioletred;
                    }

                    100% {
                        top: 300px;
                        color: sienna;
                    }
                }
    </style>
</head>
<body style="background-color:antiquewhite">

    <div>

        <span> W </span>
        <span> E </span>
        <span> L </span>
        <span> C </span>
        <span> O </span>
        <span> M </span>
        <span> E </span>

    </div>



</body>
</html>

